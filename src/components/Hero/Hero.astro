---
import Title from '../Title/Title.astro';
import { Icon } from 'astro-icon/components';
import hero_bg from '../../images/hero_bg.png';
import { TITLE_VARIANTS } from '../../domain/constants';
import { Image } from 'astro:assets';
import scalaImage from '../../images/scala.png';
import booksImage from '../../images/books.png';
import slackImage from '../../images/slack.png';

const bgUrl = `url(${hero_bg.src})`;
---

<section>
  <div class="mainContainer">
    <Image src={scalaImage} alt="Scala logo" />
    <div class="titleSection">
      <Title title="Polish Scala Comunity" variant={TITLE_VARIANTS.extraLargeUnderline} />
      <p>
        We, the members of the Polish Scala Community, are a group of passionate programmers united by our love for the
        Scala programming language. As a community, we strive to promote the use and understanding of Scala and to
        create a supportive and inclusive space where Scala programmers can come together to learn, share, and grow.
      </p>
    </div>
    <a href="#"><Image src={slackImage} alt="Go to slack" /> WE MEET ON SLACK, JOIN US TODAY!</a>
  </div>
  <Image src={booksImage} alt="Books image" class="books" />
</section>

<style lang="scss" define:vars={{ bgUrl }}>
  @import '../../styles/common-style.scss';

  section {
    @include flex-container(center, center, row, 16px);
    width: 100%;
    background-image: var(--bgUrl);
    background-color: $color-black-100;
    background-repeat: no-repeat;
    background-size: cover;
    padding: 46px 16px 46px 148px;

    @include screen-md-minus {
      padding: 46px 16px 46px 46px;
    }
    @include screen-xs {
      flex-direction: column;
      padding: 32px 24px;
      background-position-x: 60%;
    }
  }
  .mainContainer {
    z-index: 2;
    height: 100%;
    @include flex-container(flex-start, start, column, 60px);
    @include screen-xs {
      gap: 40px;
    }
  }
  .titleSection {
    @include flex-container(flex-start, start, column);
    @include screen-xs {
      justify-content: center;
    }
  }

  p {
    color: $color-neutral-100;
    font-size: 20px;
    line-height: 35px;
    letter-spacing: -0.5px;
    text-align: left;
  }
  a {
    @include flex-container(flex-start, center, row, 0.5rem);
    text-decoration: none;
    background-color: $color-neutral-100;
    padding: 12px;
    border-radius: 8px;
    font-size: 13px;
    line-height: 24px;
    font-weight: 600;
    color: $color-black-200;
  }
  .books {
    margin-top: 30px;
    width: 45%;
    height: auto;
    align-self: flex-end;

    @include screen-xs {
      width: 40%;
      position: absolute;
      right: 0;
      top: 8px;
    }
  }
</style>
