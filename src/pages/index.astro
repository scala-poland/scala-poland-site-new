---
import Title from '@components/Title/Title.astro';
import Hero from '@components/Hero/Hero.astro';
import Introduction from '@components/Introduction/Introduction.astro';
import { TITLE_ICONS, TITLE_VARIANTS } from '@domain/constants.ts';
import Layout from '@layouts/Layout.astro';
import LearningMaterials from '@components/LearningMaterials/LearningMaterials.astro';
---

<Layout title="Polish Scala Comunity">
  <main>
    <Hero />
    <Introduction />
    <LearningMaterials />

    <Title title="Companies using Scala" icon={TITLE_ICONS.handshake} />
    <Title title="Meetup groups" icon={TITLE_ICONS.calendar} />
    <Title title="Conferences" icon={TITLE_ICONS.userGroup} />
    <Title title="Scala Conference" variant={TITLE_VARIANTS.mediumUnderline} />
    <Title title="Iterators" variant={TITLE_VARIANTS.small} />
  </main>
</Layout>

<style lang="scss">
  @import '@styles/common-style.scss';
  main {
    @include flex-container(flex-start, center, column, 68px);
    margin: auto;
    max-width: 1600px;
    line-height: 1.6;
  }
</style>
